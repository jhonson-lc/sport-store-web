---
export interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<a href={href} class="relative inline-block text-lg group">
  <span
    class="relative z-10 block px-16 py-4 overflow-hidden font-medium leading-tight text-white transition-colors duration-300 ease-out border-[3px] border-neutral-100 group-hover:text-neutral-900"
  >
    <span class="absolute inset-0 w-full h-full px-16 py-4 rounded-lg"></span>
    <span
      class="absolute left-0 w-72 h-72 -ml-2 transition-all duration-300 origin-top-right -rotate-90 -translate-x-full translate-y-12 bg-neutral-100 group-hover:-rotate-180 ease"
    ></span>
    <span class="relative">{title}</span>
  </span>
</a>
